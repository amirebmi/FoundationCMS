

<div class="row">
    <div class="col-sm-4">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Event Information</h4>
                <hr />
                <p class="card-text"><strong>Name: </strong>@ViewBag.Event.EventName</p>
                <p class="card-text"><strong>Location: </strong>@ViewBag.Event.Location</p>
                <p class="card-text"><strong>Date/Time: </strong>@ViewBag.Event.EventDate.ToString("d") @ViewBag.Event.StartAt.ToString("t") to @ViewBag.Event.EndAt.ToString("t")</p>
            </div>
        </div>
    </div>
</div>
<br />

<form method="post" action="/Contributions/Edit" >
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Contribution</th>
                <th>Payment method</th>
                <th>Operations</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>@ViewBag.Donor.LastName, @ViewBag.Donor.FirstName</td>

                <td>
                    <input type="text" class="form-control" value="@Math.Round(@ViewBag.Contribution.Amount,2)" name="amount" />
                </td>

                <td>
                    <input type="text" class="form-control" value="@ViewBag.Contribution.PaymentMethod" name="paymentmethod" />
                </td>

                <td>
                    <input type="hidden" value="@ViewBag.Contribution.Id" name="id"/>

                    <button type="submit" class="btn btn-primary">Submit</button>

                    <button type="button" onclick="location.href='/Contributions/Details/@ViewBag.Event.Id';" class="btn btn-primary">Cancel</button>
                </td>
            </tr>

        </tbody>


    </table>
</form>